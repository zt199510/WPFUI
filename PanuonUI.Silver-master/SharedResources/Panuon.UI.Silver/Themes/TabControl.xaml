                            <Setter TargetName="RbtnLeft"
                                    Property="Visibility"
                                    Value="Collapsed" />
                            <Setter TargetName="RbtnRight"
                                    Property="Visibility"
                                    Value="Collapsed" />
                        </DataTrigger>
