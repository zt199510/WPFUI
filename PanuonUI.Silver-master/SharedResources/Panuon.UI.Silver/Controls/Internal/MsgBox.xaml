                                    Margin="5,0"
                                    Click="BtnCancel_Click">
                                <Button.IsDefault>
                                    <MultiBinding Converter="{StaticResource MsbButtonIsDefaultConverter}"
                                                  ConverterParameter="Cancel">
                                        <Binding Path="DefaultButton"
                                                 ElementName="Msb" />
                                        <Binding Path="MessageBoxButton"
                                                 ElementName="Msb" />
                                    </MultiBinding>
                                </Button.IsDefault>
                            </Button>
                        </StackPanel>
                    </Grid>
                </Grid>
            </Grid>
        </Grid>
    </Border>
</Window>
