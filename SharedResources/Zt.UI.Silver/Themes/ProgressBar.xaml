<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:Zt.UI.Silver" xmlns:converter="clr-namespace:Zt.UI.Silver.Converters">
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="pack://application:,,,/Zt.UI.Silver;component/Resources/Resource.xaml" />
        <ResourceDictionary Source="pack://application:,,,/Zt.UI.Silver;component/Resources/Converter.xaml" />
    </ResourceDictionary.MergedDictionaries>
    <converter:ProgressBarCornerRadiusConverter x:Key="ProgressBarCornerRadiusConverter" />
    <converter:RingProgressBarConverter x:Key="RingProgressBarConverter" />
    <converter:ProgressBarPercentConverter x:Key="ProgressBarPercentConverter" />
    <converter:ProgressBarOffset1Converter x:Key="ProgressBarOffset1Converter" />
    <converter:ProgressBarOffset2Converter x:Key="ProgressBarOffset2Converter" />

    <Style TargetType="{x:Type ProgressBar}">
        <Setter Property="SnapsToDevicePixels"
                Value="{StaticResource Default_SnapsToDevicePixels}" />
        <Setter Property="FontSize"
                Value="{StaticResource Default_FontSize}" />
        <Setter Property="SnapsToDevicePixels"
                Value="{StaticResource Default_SnapsToDevicePixels}" />
        <Setter Property="Background"
                Value="#EEEEEE" />
        <Setter Property="BorderThickness"
                Value="0" />
        <Setter Property="Foreground"
                Value="#3E3E3E" />
        <Setter Property="local:ProgressBarHelper.CornerRadius"
                Value="2" />
        <Style.Triggers>
            <DataTrigger Binding="{Binding Path=(local:ProgressBarHelper.ProgressBarStyle),RelativeSource={RelativeSource Self}, Mode=OneWay}"
                         Value="Standard">
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="{x:Type ProgressBar}">
                            <Grid>
                                <Border x:Name="PART_Track"
                                        Background="{TemplateBinding Background}"
                                        SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}">
                                    <Border.OpacityMask>
                                        <VisualBrush>
                                            <VisualBrush.Visual>
                                                <Rectangle Fill="Black"
                                                           Height="{Binding ActualHeight,RelativeSource={RelativeSource TemplatedParent}}"
                                                           Width="{Binding ActualWidth,RelativeSource={RelativeSource TemplatedParent}}"
                                                           RadiusX="{Binding Path=(local:ProgressBarHelper.CornerRadius),RelativeSource={RelativeSource TemplatedParent},Mode=OneWay}"
                                                           RadiusY="{Binding Path=(local:ProgressBarHelper.CornerRadius),RelativeSource={RelativeSource TemplatedParent},Mode=OneWay}" />
                                            </VisualBrush.Visual>
                                        </VisualBrush>
                                    </Border.OpacityMask>
                                    <Grid>
                                        <Border x:Name="PART_Indicator"
                                                CornerRadius="{Binding Path=(local:ProgressBarHelper.CornerRadius),Converter={StaticResource ProgressBarCornerRadiusConverter},RelativeSource={RelativeSource AncestorType=ProgressBar},Mode=OneWay}"
                                                HorizontalAlignment="Left"
                                                Background="{TemplateBinding Foreground}"
                                                SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}">
                                        </Border>
                                        <Grid ClipToBounds="True"
                                              x:Name="Animation"
                                              Visibility="Collapsed">
                                            <Border x:Name="PART_GlowRect"
                                                    Width="100"
                                                    HorizontalAlignment="Left"
                                                    Background="Transparent"
                                                    Margin="0,0,0,0">
                                                <Rectangle Fill="{TemplateBinding Foreground}" />
                                            </Border>
                                        </Grid>
                                    </Grid>
                                </Border>
                                <Border BorderThickness="{TemplateBinding BorderThickness}"
                                        BorderBrush="{TemplateBinding BorderBrush}"
                                        CornerRadius="{Binding Path=(local:ProgressBarHelper.CornerRadius),Converter={StaticResource DoubleToCornerRadiusConverter},RelativeSource={RelativeSource AncestorType=ProgressBar},Mode=OneWay}"
                                        Background="Transparent" />
                                <TextBlock x:Name="TxtPercent"
                                           FontSize="{TemplateBinding FontSize}"
                                           FontFamily="{TemplateBinding FontFamily}"
                                           FontWeight="{TemplateBinding FontWeight}"
                                           Foreground="{TemplateBinding Foreground}"
                                           VerticalAlignment="Center"
                                           HorizontalAlignment="Center"
                                           Visibility="Collapsed">
                                    <TextBlock.Text>
                                        <MultiBinding Converter="{StaticResource ProgressBarPercentConverter}">
                                            <Binding Path="Minimum"
                                                     RelativeSource="{RelativeSource AncestorType=ProgressBar}"></Binding>
                                            <Binding Path="Maximum"
                                                     RelativeSource="{RelativeSource AncestorType=ProgressBar}"></Binding>
                                            <Binding Path="Value"
                                                     RelativeSource="{RelativeSource AncestorType=ProgressBar}"></Binding>
                                        </MultiBinding>
                                    </TextBlock.Text>
                                </TextBlock>
                                <TextBlock x:Name="TxtPercentWhite"
                                           FontSize="{TemplateBinding FontSize}"
                                           FontFamily="{TemplateBinding FontFamily}"
                                           FontWeight="{TemplateBinding FontWeight}"
                                           Foreground="White"
                                           VerticalAlignment="Center"
                                           HorizontalAlignment="Center"
                                           Visibility="Collapsed">
                                    <TextBlock.OpacityMask>
                                        <LinearGradientBrush StartPoint="0,0"
                                                             EndPoint="1,0">
                                            <GradientStop Color="White">
                                                <GradientStop.Offset>
                                                    <MultiBinding Converter="{StaticResource ProgressBarOffset1Converter}">
                                                        <Binding Path="Minimum"
                                                                 RelativeSource="{RelativeSource AncestorType=ProgressBar}"></Binding>
                                                        <Binding Path="Maximum"
                                                                 RelativeSource="{RelativeSource AncestorType=ProgressBar}"></Binding>
                                                        <Binding Path="Value"
                                                                 RelativeSource="{RelativeSource AncestorType=ProgressBar}"></Binding>
                                                        <Binding Path="ActualWidth"
                                                                 RelativeSource="{RelativeSource AncestorType=ProgressBar}"></Binding>
                                                        <Binding Path="ActualWidth"
                                                                 ElementName="TxtPercentWhite" />
                                                    </MultiBinding>
                                                </GradientStop.Offset>
                                            </GradientStop>
                                            <GradientStop Color="Transparent">
                                                <GradientStop.Offset>
                                                    <MultiBinding Converter="{StaticResource ProgressBarOffset2Converter}">
                                                        <Binding Path="Minimum"
                                                                 RelativeSource="{RelativeSource AncestorType=ProgressBar}"></Binding>
                                                        <Binding Path="Maximum"
                                                                 RelativeSource="{RelativeSource AncestorType=ProgressBar}"></Binding>
                                                        <Binding Path="Value"
                                                                 RelativeSource="{RelativeSource AncestorType=ProgressBar}"></Binding>
                                                        <Binding Path="ActualWidth"
                                                                 RelativeSource="{RelativeSource AncestorType=ProgressBar}"></Binding>
                                                        <Binding Path="ActualWidth"
                                                                 ElementName="TxtPercentWhite" />
                                                    </MultiBinding>
                                                </GradientStop.Offset>
                                            </GradientStop>
                                        </LinearGradientBrush>
                                    </TextBlock.OpacityMask>
                                    <TextBlock.Text>
                                        <MultiBinding Converter="{StaticResource ProgressBarPercentConverter}">
                                            <Binding Path="Minimum"
                                                     RelativeSource="{RelativeSource AncestorType=ProgressBar}"></Binding>
                                            <Binding Path="Maximum"
                                                     RelativeSource="{RelativeSource AncestorType=ProgressBar}"></Binding>
                                            <Binding Path="Value"
                                                     RelativeSource="{RelativeSource AncestorType=ProgressBar}"></Binding>
                                        </MultiBinding>
                                    </TextBlock.Text>
                                </TextBlock>

                            </Grid>
                            <ControlTemplate.Triggers>
                                <DataTrigger Binding="{Binding Path=(local:ProgressBarHelper.IsPercentVisible),RelativeSource={RelativeSource Self}, Mode=OneWay}"
                                             Value="True">
                                    <Setter TargetName="TxtPercent"
                                            Property="Visibility"
                                            Value="Visible" />
                                    <Setter TargetName="TxtPercentWhite"
                                            Property="Visibility"
                                            Value="Visible" />
                                </DataTrigger>
                                <Trigger Property="IsIndeterminate"
                                         Value="True">
                                    <Setter TargetName="PART_Indicator"
                                            Property="Visibility"
                                            Value="Collapsed" />
                                    <Setter TargetName="Animation"
                                            Property="Visibility"
                                            Value="Visible" />
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </DataTrigger>

            <DataTrigger Binding="{Binding Path=(local:ProgressBarHelper.ProgressBarStyle),RelativeSource={RelativeSource Self}, Mode=OneWay}"
                         Value="Ring">
                <Setter Property="Background"
                        Value="White" />
                <Setter Property="BorderThickness"
                        Value="5" />
                <Setter Property="BorderBrush"
                        Value="LightGray" />
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="{x:Type ProgressBar}">
                            <Grid x:Name="GrdMain">
                                <Ellipse x:Name="Ellipse_Track"
                                         Stroke="{TemplateBinding BorderBrush}"
                                         Fill="{TemplateBinding Background}"
                                         StrokeThickness="{TemplateBinding BorderThickness,Converter={StaticResource ThicknessToDoubleConverter}}" />
                                <Path x:Name="Path_Indicator"
                                      Stroke="{TemplateBinding Foreground}"
                                      StrokeThickness="{TemplateBinding BorderThickness,Converter={StaticResource ThicknessToDoubleConverter}}"
                                      StrokeStartLineCap="Round"
                                      StrokeEndLineCap="Round">
                                    <Path.Data>
                                        <MultiBinding Converter="{StaticResource RingProgressBarConverter}">
                                            <Binding Path="ActualWidth"
                                                     RelativeSource="{RelativeSource AncestorType=ProgressBar}"></Binding>
                                            <Binding Path="ActualHeight"
                                                     RelativeSource="{RelativeSource AncestorType=ProgressBar}"></Binding>
                                            <Binding Path="BorderThickness"
                                                     RelativeSource="{RelativeSource AncestorType=ProgressBar}"></Binding>
                                            <Binding Path="Minimum"
                                                     RelativeSource="{RelativeSource AncestorType=ProgressBar}"></Binding>
                                            <Binding Path="Maximum"
                                                     RelativeSource="{RelativeSource AncestorType=ProgressBar}"></Binding>
                                            <Binding Path="Value"
                                                     RelativeSource="{RelativeSource AncestorType=ProgressBar}"></Binding>
                                        </MultiBinding>
                                    </Path.Data>

                                </Path>
                                <Path x:Name="Path_Animation"
                                      Visibility="Collapsed"
                                      Stroke="{TemplateBinding Foreground}"
                                      StrokeThickness="{TemplateBinding BorderThickness,Converter={StaticResource ThicknessToDoubleConverter}}"
                                      StrokeStartLineCap="Round"
                                      StrokeEndLineCap="Round"
                                      RenderTransformOrigin="0.5,0.5">
                                    <Path.RenderTransform>
                                        <RotateTransform x:Name="Rotate" />
                                    </Path.RenderTransform>
                                    <Path.Data>
                                        <MultiBinding Converter="{StaticResource RingProgressBarConverter}">
                                            <Binding Path="ActualWidth"
                                                     RelativeSource="{RelativeSource AncestorType=ProgressBar}"></Binding>
                                            <Binding Path="ActualHeight"
                                                     RelativeSource="{RelativeSource AncestorType=ProgressBar}"></Binding>
                                            <Binding Path="BorderThickness"
                                                     RelativeSource="{RelativeSource AncestorType=ProgressBar}"></Binding>
                                        </MultiBinding>
                                    </Path.Data>
                                </Path>
                                <TextBlock x:Name="TxtPercent"
                                           FontSize="{TemplateBinding FontSize}"
                                           FontFamily="{TemplateBinding FontFamily}"
                                           FontWeight="{TemplateBinding FontWeight}"
                                           Foreground="{TemplateBinding Foreground}"
                                           VerticalAlignment="Center"
                                           HorizontalAlignment="Center"
                                           Visibility="Collapsed">
                                    <TextBlock.Text>
                                        <MultiBinding Converter="{StaticResource ProgressBarPercentConverter}">
                                            <Binding Path="Minimum"
                                                     RelativeSource="{RelativeSource AncestorType=ProgressBar}"></Binding>
                                            <Binding Path="Maximum"
                                                     RelativeSource="{RelativeSource AncestorType=ProgressBar}"></Binding>
                                            <Binding Path="Value"
                                                     RelativeSource="{RelativeSource AncestorType=ProgressBar}"></Binding>
                                        </MultiBinding>
                                    </TextBlock.Text>
                                </TextBlock>
                            </Grid>
                            <ControlTemplate.Triggers>
                                <DataTrigger Binding="{Binding Path=(local:ProgressBarHelper.IsPercentVisible),RelativeSource={RelativeSource Self}, Mode=OneWay}"
                                             Value="True">
                                    <Setter TargetName="TxtPercent"
                                            Property="Visibility"
                                            Value="Visible" />
                                </DataTrigger>
                                <Trigger Property="IsIndeterminate"
                                         Value="True">
                                    <Setter TargetName="Path_Indicator"
                                            Property="Visibility"
                                            Value="Collapsed" />
                                    <Setter TargetName="Path_Animation"
                                            Property="Visibility"
                                            Value="Visible" />
                                    <Trigger.EnterActions>
                                        <BeginStoryboard>
                                            <Storyboard>
                                                <DoubleAnimation Storyboard.TargetName="Rotate"
                                                                 Storyboard.TargetProperty="Angle"
                                                                 To="360"
                                                                 RepeatBehavior="Forever"
                                                                 Duration="0:0:2" />
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </Trigger.EnterActions>
                                    <Trigger.ExitActions>
                                        <BeginStoryboard>
                                            <Storyboard>
                                                <DoubleAnimation Storyboard.TargetName="Rotate"
                                                                 Storyboard.TargetProperty="Angle"
                                                                 Duration="0:0:0" />
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </Trigger.ExitActions>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </DataTrigger>
            <Trigger  Property="IsEnabled"
                      Value="False">
                <Setter Property="Opacity"
                        Value="0.4"/>
            </Trigger>
        </Style.Triggers>
    </Style>
</ResourceDictionary>